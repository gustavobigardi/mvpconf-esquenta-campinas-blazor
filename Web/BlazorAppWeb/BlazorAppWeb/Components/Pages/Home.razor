    private IQueryable<Movie> filteredMovies => movies.Where(m => m.Title!.Contains(titleFilter));

    public class Movie
    {
        public string? Title { get; set; }
        public string? Genre { get; set; }
        public int ReleaseYear { get; set; }
    }
}